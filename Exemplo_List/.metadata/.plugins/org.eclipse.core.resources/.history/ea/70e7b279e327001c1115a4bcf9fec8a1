import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		//variaveis
		int y = 32;
		double x= 10.35784;
		
		int idade = 31;
		double renda = 4000.0;
		
		//exibe duas casas depois do ponto
		System.out.printf("%.2f%n", x);
		//fomata a informacao de acordo com o idioma selecionado e nao pelo idioma do computador
		Locale.setDefault(Locale.US);
		//exibe formatado duas casas depois do ponto
		System.out.printf("%.4f%n", x);
		//exibe frase  + resultado + frase
		System.out.println("RESULTADO = " + x + " METROS");
		//exibe a frase + resultado formatado duas casas depois do ponto 
		System.out.printf("RESULTADO = %.2f metros%n", x);
		// exibe e nao pula linha 
		System.out.print(y); 
		// exibe e pula linha 
		System.out.println("Ola Mundo!"); 

	}

}
