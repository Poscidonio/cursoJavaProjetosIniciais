package curso_programacao_estrutura_repeticao;

import java.util.Scanner;

public class Exercicio_2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite a coordenada de X:");
		int x = sc.nextInt();
		
		System.out.println("Digite a coordenada de Y:");
		int y = sc.nextInt();
		
		while(x != 0 || y != 0) {
				
			if (x > 0 && y > 0) {
				System.out.println("As coordenadadas pertencem ao PRIMEIRO quadrante.");
			}else if(x > 0 &&  y < 0){
				System.out.println("As coordenadadas pertencem ao QUARTO quadrante.");
				
			}else if(x < 0 &&  y < 0){
				System.out.println("As coordenadadas pertencem ao TERCEIRO quadrante.");
				
			}else {
				System.out.println("As coordenadadas pertencem ao SEGUNDO quadrante.");
			}
			System.out.println("Digite a coordenada de X:");
			x = sc.nextInt();
			
			System.out.println("Digite a coordenada de Y:");
			y = sc.nextInt();
		}
		sc.close();

	}

}
